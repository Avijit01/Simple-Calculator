<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="14.5"
        android:background="#6F6F6F"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:background="#E4E4E4"
            android:orientation="vertical"
            android:weightSum="5"
            >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="140dp"
                android:layout_weight="1"
                android:gravity="right|center"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/OutputTextId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Output"
                    android:textSize="30sp"
                    android:layout_margin="20dp"
                    />

                <TextView
                    android:id="@+id/InputExtraId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Input"
                    android:textSize="20sp"
                    android:layout_marginRight="20dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="4"

                android:gravity="right|bottom"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/InputTextId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enter Input"
                    android:layout_marginRight="20dp"
                    android:textSize="27sp"
                    />

                <ImageButton
                    android:id="@+id/ClearId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/clear"
                    android:textSize="15sp"
                    android:background="#AFAFAF"
                    android:textStyle="bold"
                    android:backgroundTint="#E4E4E4"
                    />

            </LinearLayout>






        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:weightSum="4"
            android:background="#AFAFAF"
            >

            <Button
                android:id="@+id/ResetId"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="C"
                android:textSize="20sp"
                android:background="#AFAFAF"
                android:textStyle="bold"
                android:layout_weight="1"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="R"
                android:background="#AFAFAF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_weight="1"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="^"
                android:textSize="20sp"
                android:textStyle="bold"
                android:background="#AFAFAF"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/AddId"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="+"
                android:textSize="20sp"
                android:background="#AFAFAF"
                android:textStyle="bold"
                android:layout_weight="1"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:weightSum="4"
            >

            <Button
                android:id="@+id/In7Id"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="7"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/In8Id"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="8"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/In9Id"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="9"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/SubId"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="-"
                android:background="#AFAFAF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:weightSum="4"
            >

            <Button
                android:id="@+id/In4Id"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="4"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/In5Id"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="5"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/In6Id"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="6"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/MulId"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="X"
                android:background="#AFAFAF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:weightSum="4"
            >

            <Button
                android:id="@+id/In1Id"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="1"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/In2Id"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="2"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/In3Id"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="3"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/DivideId"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="/"
                android:textSize="20sp"
                android:background="#AFAFAF"
                android:textStyle="bold"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:weightSum="4"
            >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="."
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_weight="1"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="0"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_weight="1"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="="
                android:textColor="#fff"
                android:background="#202020"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_weight="1"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="%"
                android:background="#AFAFAF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_weight="1"/>

        </LinearLayout>







    </LinearLayout>

</LinearLayout>