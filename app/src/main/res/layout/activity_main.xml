<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="14.5"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:background="#E4E4E4"
            android:orientation="vertical"
            android:gravity="right|bottom"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter Input"
                android:textSize="27sp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:weightSum="4"
            android:background="#AFAFAF"
            >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="C"
                android:textSize="20sp"
                android:background="#AFAFAF"
                android:textStyle="bold"
                android:layout_weight="1"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="R"
                android:background="#AFAFAF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_weight="1"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="^"
                android:textSize="20sp"
                android:textStyle="bold"
                android:background="#AFAFAF"
                android:layout_weight="1"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="+"
                android:textSize="20sp"
                android:background="#AFAFAF"
                android:textStyle="bold"
                android:layout_weight="1"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:weightSum="4"
            >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="7"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_weight="1"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="8"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_weight="1"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="9"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_weight="1"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="-"
                android:background="#AFAFAF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:weightSum="4"
            >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="4"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_weight="1"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="5"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_weight="1"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="6"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_weight="1"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="X"
                android:background="#AFAFAF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:weightSum="4"
            >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="1"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_weight="1"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="2"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_weight="1"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="3"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_weight="1"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="/"
                android:textSize="20sp"
                android:background="#AFAFAF"
                android:textStyle="bold"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:weightSum="4"
            >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="."
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_weight="1"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="0"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_weight="1"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="="
                android:textColor="#fff"
                android:background="#202020"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_weight="1"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="%"
                android:background="#AFAFAF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_weight="1"/>

        </LinearLayout>







    </LinearLayout>

</LinearLayout>